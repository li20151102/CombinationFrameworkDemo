<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ccddff">

    <include layout="@layout/action_bar"/>
    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        android:textColor="@android:color/holo_green_light"
        android:textSize="20sp"/>

    <com.example.administrator.myapplication.chartviewutils.HistogramView
        android:id="@+id/histogrmView"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="300dp" />
    <com.example.administrator.myapplication.chartviewutils.LineChartView
        android:id="@+id/lineChartView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <com.example.administrator.myapplication.chartviewutils.PinChart
        android:id="@+id/pinChartView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>